<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hero"
    android:background="#dfcdab">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/HeroIll"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-130dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hi1" />

    <ImageView
        android:id="@+id/Top"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top" />


    <TextView
        android:id="@+id/loginid"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:text="UserLogin"
        android:paddingStart="5dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userGold"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:drawableStart="@drawable/gold_psd"
        android:drawablePadding="-30dp"
        android:paddingStart="7dp"
        android:text="12345"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Exit"
        android:layout_width="105dp"
        android:layout_height="43dp"
        android:layout_marginStart="-55dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:drawableEnd="@drawable/arrow_left"
        android:drawablePadding="5dp"
        android:paddingEnd="3dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:onClick="ExitToMain"/>

    <TextView
        android:id="@+id/LVL"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Уровень"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/LVLid"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LVL" />

    <TextView
        android:id="@+id/BK"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="БК"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/LVL"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/BKid"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="51,000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintStart_toEndOf="@+id/BK"
        app:layout_constraintTop_toBottomOf="@+id/LVLid" />

    <TextView
        android:id="@+id/ATK"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Атака"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/BK"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ATKid"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="00dp"
        android:gravity="center"
        android:text="18,000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintStart_toEndOf="@+id/ATK"
        app:layout_constraintTop_toBottomOf="@+id/BKid" />
    <TextView
        android:id="@+id/DEF"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Защита"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ATK"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DEFid"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="00dp"
        android:gravity="center"
        android:text="9,000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintStart_toEndOf="@+id/DEF"
        app:layout_constraintTop_toBottomOf="@+id/ATKid" />
    <TextView
        android:id="@+id/OZ"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="ОЗ"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/DEF"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/OZid"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="00dp"
        android:gravity="center"
        android:text="180,000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintStart_toEndOf="@+id/OZ"
        app:layout_constraintTop_toBottomOf="@+id/DEFid" />


    <TextView
        android:id="@+id/FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="«Материальный клон»\nМелиодас Лоствейн"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Top" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Умения"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/OZ"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ab_1"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:srcCompat="@drawable/ab_2_1" />

    <ImageView
        android:id="@+id/ab_2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/ab_1"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:srcCompat="@drawable/ab_2_2" />

    <ImageView
        android:id="@+id/ab_3"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/ab_2"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:srcCompat="@drawable/ab_2_3" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Уникальность"
        android:textColor="#000000"
        android:textSize="15dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ab_1"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ab_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        app:srcCompat="@drawable/pas_2_1" />

    <ImageView
        android:id="@+id/lvlup"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/lvl" />

    <ImageView
        android:id="@+id/prob"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/lvlup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/prob" />

</androidx.constraintlayout.widget.ConstraintLayout>