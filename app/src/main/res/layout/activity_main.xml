            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:onClick="openHero"
            app:srcCompat="@drawable/p1" />

        <ImageView
            android:id="@+id/i2"
